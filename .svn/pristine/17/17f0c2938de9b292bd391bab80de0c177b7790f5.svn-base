<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_margin="5dp"
    android:background="@drawable/btn_bg_close_shift">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:layout_margin="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="inherit"
            android:textColor="#3F51B5"
            android:textSize="22dp"
            android:text="ثبت دستگاه "
            android:padding="10dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="inherit"
            android:textColor="#000000"
            android:textSize="18dp"
            android:text="شناسه دستگاه: "
            android:paddingRight="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/devIdView"
            android:textStyle="bold"
            android:textAlignment="inherit"
            android:textColor="#D51111"
            android:textSize="18dp"
            android:text="---"
            android:paddingRight="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sendReqBtn"
            android:layout_margin="10dp"
            android:text="---"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/returnBtn"
            android:onClick="goBackFromRegisterPage"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="برگشت"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/statusView"
            android:text="---"
            android:textStyle="bold"
            android:textColor="#000"
            android:padding="15dp"
            android:background="@drawable/btn_bg_edittext_maintenance"/>




    </LinearLayout>



</LinearLayout>