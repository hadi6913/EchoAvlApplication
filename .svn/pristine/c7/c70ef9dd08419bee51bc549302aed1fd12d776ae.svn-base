<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frag_bg"
    android:weightSum="1">


    <!--<androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="10dp">-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">


            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/flasher"
                android:layout_gravity="center_vertical|center_horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_viewOne"
                android:text="خارج از سرویس"
                android:textColor="#F44336"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_viewTwo"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="در حال حاضر دستگاه خارج از سرویس است"
                android:textSize="24sp"
                android:padding="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_viewThree"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:text="کد خرابی"
                android:padding="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_viewFour"
                android:layout_marginTop="1dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="112 - 114 - 167"
                android:textSize="34sp"
                android:padding="15dp" />


        </LinearLayout>

    <!--</androidx.cardview.widget.CardView>-->

</LinearLayout>